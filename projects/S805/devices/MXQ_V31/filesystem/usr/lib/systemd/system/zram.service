[Unit]
Description=ZRAM service

[Service]
Type=simple
ExecStart=/bin/sh -c "modprobe zram num_devices=4 ; \
echo 64M > /sys/block/zram0/disksize ; \
echo 64M > /sys/block/zram1/disksize ; \
echo 64M > /sys/block/zram2/disksize ; \
echo 64M > /sys/block/zram3/disksize ; \
/sbin/mkswap /dev/zram0 ; \
/sbin/mkswap /dev/zram1 ; \
/sbin/mkswap /dev/zram2 ; \
/sbin/mkswap /dev/zram3 ; \
/usr/sbin/swapon -p 10 /dev/zram0 ; \
/usr/sbin/swapon -p 10 /dev/zram1 ; \
/usr/sbin/swapon -p 10 /dev/zram2 ; \
/usr/sbin/swapon -p 10 /dev/zram3 "

[Install]
WantedBy=swap.service
